---
import Layout from "@/layouts/Base.astro";
import StarSystemScene from "@/components/StarSystem/Scene.svelte";
import CategorySelector from "@/components/Challenges/CategorySelector.svelte";
import ChallengeList from "@/components/Challenges/ChallengeList.svelte";
import Challenge from "@/components/Challenges/Challenge.svelte";
---

<Layout title="Missions">
  <!-- <div slot="background" class="hidden md:flex h-screen w-screen">
    <StarSystemScene client:load />
  </div> -->
  <div
    class="relative flex flex-row overflow-hidden !pointer-events-none *:pointer-events-auto h-full"
  >
    <!-- Category Sidebar -->
    <CategorySelector client:load />
    <!-- Challenge List -->
    <span
      class="bg-surface-100/50 backdrop-blur-md h-full w-full max-w-lg scrollbar-gutter custom-scrollbar overflow-y-auto"
    >
      <ChallengeList client:load />
    </span>
    <!-- Challenge Details -->
    <div
      class="absolute top-0 left-0 lg:static lg:top-auto lg:left-auto !pointer-events-none flex items-center justify-center w-full gap-4 h-full"
    >
      <Challenge client:load />
    </div>
  </div>
</Layout>
